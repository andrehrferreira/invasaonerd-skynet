<script>
	Vue.component('in-hero', {
		template: '#in-hero',
		computed: {
			...mapGetters('app', ['icons'])
		},
		data () {
			const images = [
				'son-goku-mastered-ultra-instinct-79',
				'deadpool-2-movie-poster-n1',
				'no-mans-sky-8k-ultrawide-i3',
				'star-lord-cosplay-0t',
